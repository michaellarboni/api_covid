{% extends 'base.html.twig' %}

{% block body %}

    <div class="album py-5">
        <div class="container">
            <h1 class="mb-5">Les chiffres du COVID-19 en France</h1>

            <div class="row row-cols-1 row cols-sm-2 row-cols-md-3">

                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Nombre d'hospitalisations</h5>
                            <p class="card-text">Nombre de personnes actuellement hospitalisées</p>
                        </div>
                        <h3 class="card-footer bgwarning text-dark rouded-pill">
                            {{ data.FranceGlobalLiveData.0.hospitalises }}
                        </h3>
                    </div>
                </div>

                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Nombre de reanimations</h5>
                            <p class="card-text">Nombre de personnes actuellement en reanimation</p>
                        </div>
                        <h3 class="card-footer bgwarning text-dark rouded-pill">
                            {{ data.FranceGlobalLiveData.0.reanimation }}
                        </h3>
                    </div>
                </div>

                <div class="col">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Nombre de décés</h5>
                            <p class="card-text">Nombre de décés</p>
                        </div>
                        <h3 class="card-footer bgwarning text-dark rouded-pill">
                            {{ data.FranceGlobalLiveData.0.hospitalises }}
                        </h3>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}
